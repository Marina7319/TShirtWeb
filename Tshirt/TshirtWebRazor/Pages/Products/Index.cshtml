@page
@model TshirtWebRazor.Pages.Products.IndexModel


<div style="width: 48rem;">
   <div>
      <div>
         <div>
            <h2 class="text-center">Create Product</h2>
         </div>
      </div>
   </div>
   <div>
      <div>
         <div>
            <h3 class="text-center">
               Product List
            </h3>
         </div>
         <div>
            <a asp-page="/products/create" class="btn btn-outline-info" style="float: right;padding:25px;">
            <i class="bi bi-sign-intersection"></i> Create New Product 
            </a>
         </div>
      </div>
      <table id ="tableData"  style="width:100%">
         <thead>
            <tr>
               <th>T-shirt Name</th>
               <th>Size</th>
               <th>Color</th>
               <th>Price</th>
               <!--  <th>Description</th> -->
               <th>Category</th>
               <th>Id</th>
            </tr>
         </thead>
          <tbody> 
     @foreach(var obj in Model.ProductList.OrderBy(u=>u.Id))
         {
         <tr>
            <td>
               @obj.TshirtName
            </td>
            <td>
               @obj.Size
            </td>
               <td>
               @obj.Color
            </td>
               <td>
               @obj.ListPrice
            </td>
               <td>
               @obj.Id
            </td>
               <td>
               @obj.CategoryId
            </td>

            <td>
               <div class="btn-group" role="group">
                  <a asp-page="/products/edit" asp-route-id="@obj.Id"  class="btn btn-outline-primary">
                  <i class="bi bi-pencil"></i> Edit
                  </a>
                  <a asp-page="/products/delete" asp-route-id="@obj.Id"  class="btn btn-outline-danger">
                  <i class="bi bi-trash-fill"></i> Delete
                  </a>
               </div>
            </td>
         </tr>
         } 
      </tbody>
      </table>
   </div>
</div>
@section Scripts{
<script src="~/js/product.js"></script>
}
