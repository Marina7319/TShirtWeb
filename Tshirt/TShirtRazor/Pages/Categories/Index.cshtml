@page
@model TShirtRazor.Pages.Categories.IndexModel


<h1>Category List</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
            Category List
            </h2>
        </div>
         <div class="col-6 text-end">
             <a asp-page="/categories/create" class="btn btn-light">
                <i class="bi bi-sign-intersection"></i> Create New Category 
             </a>
        </div>
    </div>

<table class="table table-sm">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                 <td>
                      @obj.Name
                 </td>
                 <td>
                      @obj.DisplayOrder
                 </td>
                 <td>
                     <div class="w-75 btn-group" rolw="group">
                         <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                             <i class="bi bi-pencil"></i> Edit
                         </a>
                         <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                           <i class="bi bi-trash-fill"></i> Delete
                         </a>
                     </div>
                 </td>
            </tr>
        }
    </tbody>
</table>