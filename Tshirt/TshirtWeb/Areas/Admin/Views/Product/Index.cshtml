@model List<Product>

<div style="width: 48rem;">
   <div>
      <div>
         <div>
            <h2 class="text-center">Create Product</h2>
         </div>
      </div>
   </div>
   <div>
      <div>
         <div>
            <h3 class="text-center">
               Product List
            </h3>
         </div>
         <div>
            <a asp-controller="Product" asp-action="Update" class="btn btn-outline-info" style="float: right;padding=25px;">
            <i class="bi bi-sign-intersection"></i> Create New Product 
            </a>
         </div>
      </div>
      <table id ="tableData"  style="width:100%">
         <thead>
            <tr>
               <th>T-shirt Name</th>
               <th>Size</th>
               <th>Color</th>
               <th>Price</th>
               <!--  <th>Description</th> -->
               <th>Category</th>
               <th>Id</th>
            </tr>
         </thead>
      </table>
   </div>
</div>
