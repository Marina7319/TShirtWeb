@model List<Product> 
<partial name="_Notification" />


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
  
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
            Product List
            </h2>
        </div>
         <div class="col-6 text-end">
             <a asp-controller="Product" asp-action="Create" class="btn btn-light">
                <i class="bi bi-sign-intersection"></i> Create New Product 
             </a>
        </div>
    </div>

<table class="table table-sm">
    <thead>
    <tr>
        <th>TshirtName</th>
        <th>Description</th>
        <th>Size</th>
        <th>Color</th>
        <th>Price</th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Description))
        {
            <tr>
                 <td>
                      @obj.TshirtName
                 </td>
                 <td>
                      @obj.Size
                 </td>
                   <td>
                      @obj.Color
                 </td>
                   <td>
                      @obj.ListPrice
                 </td>
                   <td>
                      @obj.Description
                 </td>
                 <td>

                 </td>
                 <td>
                     <div class="w-75 btn-group" rolw="group">
                         <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                             <i class="bi bi-pencil"></i> Edit
                         </a>
                         <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                           <i class="bi bi-trash-fill"></i> Delete
                         </a>
                     </div>
                 </td>
            </tr>
        }
    </tbody>
</table>
  
</div>



