@page
@model TshirtWebRazor.Pages.Categories.IndexModel


<div style="width: 48rem;">
<div>
   <div>
      <div class="text-center">
         <h2 class="display-5">Create Category</h2>
      </div>
   </div>
</div>
<div>
   <div>
      <div class="text-center">
         <h2 class="display-6">
            Category List
         </h2>
      </div>
      <div>
         <a asp-page="/categories/create" class="btn btn-outline-info" style="float: right;">
         <i class="bi bi-sign-intersection"></i> Create New Category 
         </a>
      </div>
   </div>
   <table class="table table-striped">
      <thead class="table-light">
         <tr>
            <th>
               Category Name
            </th>
            <th>
               Display Order
            </th>
            <th></th>
         </tr>
      </thead>
      <tbody> 
     @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
         {
         <tr>
            <td>
               @obj.Name
            </td>
            <td>
               @obj.DisplayOrder
            </td>
            <td>
               <div class="btn-group" role="group">
                  <a asp-page="/categories/edit" asp-route-id="@obj.Id"  class="btn btn-outline-primary">
                  <i class="bi bi-pencil"></i> Edit
                  </a>
                  <a asp-page="/categories/delete" asp-route-id="@obj.Id"  class="btn btn-outline-danger">
                  <i class="bi bi-trash-fill"></i> Delete
                  </a>
               </div>
            </td>
         </tr>
         } 
      </tbody>
   </table>
</div>