@model List<Product>

<div class="card shadow border-0 my-4">
   <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
      <div class="row">
         <div class="col-12 text-center">
            <h2 class="text-light py-2">Create Product</h2>
         </div>
      </div>
   </div>
   <div class="card-body p-4">
      <div class="row pt-4 pb-3">
         <div class="col-6">
            <h2 class="text-primary">
               Product List
            </h2>
         </div>
         <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Update" class="btn btn-light">
            <i class="bi bi-sign-intersection"></i> Create New Product 
            </a>
         </div>
      </div>
      <table id ="tableData" class="table table-sm" style="width:100%">
         <thead>
            <tr>
               <th>T-shirt Name</th>
               <th>Size</th>
               <th>Color</th>
               <th>Price</th>
               <!--  <th>Description</th> -->
               <th>Category</th>
               <th>Id</th>
            </tr>
         </thead>
      </table>
   </div>
</div>
@section Scripts{
<script src="~/js/product.js"></script>
}
