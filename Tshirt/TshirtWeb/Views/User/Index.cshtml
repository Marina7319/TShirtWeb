@using T_shirt.Models.ViewModels
@model List<UserViewModel>


   <div style="width: 48rem;">
   <div>
      <div class="text-center">
      </div>
   </div>
</div>
<div>
   <div>
      <div class="text-center">
         <h2 class="display-6">
            Users List
         </h2>
      </div>
      <div>
      </div>
   </div>
   <table class="table table-striped">
      <thead class="table-light">
         <tr>
            <th>
               User Name
            </th>
            <th></th>
         </tr>
      </thead>
      <tbody>
         @foreach(var obj in Model.OrderBy(u=>u.UserName))
         {
         <tr>
            <td>
               @obj.UserName
            </td>
            <td>
               <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                     <a type="btn btn-success" asp-controller="User" asp-action="Detail" asp-route-id="@obj.Id"
                        class="btn btn-sm btn-outline-secondary">View</a>
                     @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                     {
                     <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-sm btn-outline-secondary">Edit</a>
                     <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-sm btn-outline-secondary">Delete</a>
                     }
                  </div>
               </div>
            </td>
         </tr>
         } 
      </tbody>
   </table>
</div>
